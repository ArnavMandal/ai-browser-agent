{
  "manifest_version": 3,
  "name": "AI Browser Agent",
  "version": "1.0.0",
  "description": "An AI-powered browser agent that helps with web navigation and tasks",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
